@model Main.BLL.DTO.UavTypeDTO

@{
    ViewBag.Title = "Gcu";
}

@using (Html.BeginForm("EditUavType", "Admin"))
{

    @Html.AntiForgeryToken()

    <h4>@Model.Name</h4>
    <hr />
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <table class="table table-hover table-striped">
        <thead class="thead-default">
            <tr>
                <th>#</th>
                <th>Параметр</th>
                <th>Значение</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>@Html.LabelFor(x => x.Name, new { @class = "control-label col-md-7" })</td>

                <td>
                    @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control", data_val = "true", data_val_required = "Поле не должно быть пустым" } })
                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                </td>
            </tr>
        </tbody>
    </table>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}
<div>@Html.ActionLink("Back to List", "Index")</div>