@model Main.BLL.DTO.UavDTO


<table class="table table-hover table-striped">
    <thead class="thead-default">
        <tr>
            <th>#</th>
            <th>Параметр</th>
            <th>Значение</th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">1</th>
            <td>Тип БЛА</td>
            <td>
                @{
                    string value;
                    switch (@Model.Type.Name)
                    {
                        case ("buselm"):
                            value = "Бусел М";
                            break;
                        case ("buselm50"):
                            value = "Бусел М50";
                            break;
                        case ("bur"):
                            value = "Буревестник";
                            break;
                        case ("bakem"):
                            value = "БЛА на базе дирижабля";
                            break;

                        default:
                            value = "Не установлено";
                            break;
                    }
                    @value
              
                }
            </td>

        </tr>

        <tr>
            <th scope="row">2</th>
            <td>Дальность применения</td>
            <td> До @Html.DisplayFor(x => x.FlightRadius) км</td>
        </tr>
        <tr>
            <th scope="row">3</th>
            <td>Продолжительность полета</td>
            <td>До @Html.DisplayFor(x => x.Endurance) мин.</td>
        </tr>
        <tr>
            <th scope="row">4</th>
            <td>Минимальная скорость</td>
            <td>@Html.DisplayFor(x => x.MinSpeed) м/c </td>

        </tr>
        <tr>
            <th scope="row">5</th>
            <td>Максимальная скорость</td>
            <td>@Html.DisplayFor(x => x.MaxSpeed) м/c</td>
        </tr>
        <tr>
            <th scope="row">6</th>
            <td>Посадка</td>
            <td>
                @{

                    switch (@Model.LandingProcedure)
                    {
                        case ("approach"):
                            value = "Посадка на полосу";
                            break;
                        case ("parachute"):
                            value = "Посадка с использованием парашюта";
                            break;


                        default:
                            value = "Не установлено";
                            break;
                    }
                    @value
                }
            </td>
        </tr>
        <tr>
            <th scope="row">7</th>
            <td>Взлет</td>
            <td>
                @{

                    switch (@Model.TakeoffProcedure)
                    {
                        case ("onhand"):
                            value = "Взлет \"c руки\"";
                            break;
                        case ("catapult"):
                            value = "Взлет с использованием катапульты";
                            break;
                        case ("approach"):
                            value = "Взлет с использованием полосы";
                            break;
                        case ("onhand/catapult"):
                            value = "Взлет \"c руки\" либо с использованием катапульты";
                            break;

                        default:
                            value = "Не установлено";
                            break;
                    }
                    @value
                }
            </td>
        </tr>
        <tr>
            <th scope="row">8</th>
            <td>Взлетная масса</td>
            <td>@Html.DisplayFor(x => x.TakeoffWeight) кг</td>
        </tr>

        <tr>
            <th scope="row">9</th>
            <td>Длина планера</td>
            <td>@Html.DisplayFor(x => x.Length) мм</td>
        </tr>

        <tr>
            <th scope="row">10</th>
            <td>Размах крыльев</td>
            <td>@Html.DisplayFor(x => x.Wingspan) мм</td>
        </tr>
        <tr>
            <th scope="row">11</th>
            <td>Тип силовой установки</td>
            <td>
                @{
                    switch (@Model.PowerUnit)
                    {
                        case ("ee"):
                            value = "Двигатель внутреннего сгорания";
                            break;
                        case ("electric"):
                            value = "Электродвигатель";
                            break;

                        default:
                            value = "Не установлено";
                            break;
                    }
                    @value
                }
            </td>
        </tr>
        <tr>
            <th scope="row">12</th>
            <td>Поддерживаемые типы целевых нагрузок</td>
            <td>
                <ul>
                    @foreach (var item in @Model.Payloads)
                    {

                        switch (item.Type)
                        {
                            case ("tv"):
                                value = "ТВ - камера";
                                break;
                            case ("ir"):
                                value = "ИК - камера";
                                break;
                            case ("frontal"):
                                value = "Фронтальная камера";
                                break;
                            case ("photo"):
                                value = "Фото - камера";
                                break;
                            case ("otus"):
                                value = "OTUS LS203";
                                break;
                            case ("ms"):
                                value = "Мультиспектральная камера";
                                break;
                            default:
                                value = "Не установлено";
                                break;
                        }
                        <li>   <a href="#"><h5><span class="label label-info">@value</span></h5></a></li>
                    }

                </ul>
            </td>
        </tr>
        <tr>
            <th scope="row">13</th>
            <td>Возможные реализации наземного пункта управления</td>
            <td>
                <ul>
                    @foreach (var item in @Model.GcuTypes)
                    {

                        switch (item.Name)
                        {
                            case ("portable"):
                                value = "Переносной";
                                break;
                            case ("stationary"):
                                value = "Стационарный";
                                break;
                            case ("mobile"):
                                value = "Мобильный";
                                break;

                            default:
                                value = "Не установлено";
                                break;
                        }
                        <li>  <a href="#"><h5><span class="label label-info">@value</span></h5></a></li>
                    }
                </ul>
            </td>
        </tr>
    </tbody>
</table>