@model UAV.Domain.Entities.Uav

<table class="table table-hover table-striped">
    <thead class="thead-default">
        <tr>
            <th>#</th>
            <th>Параметр</th>
            <th>Значение</th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">1</th>
            <td>Тип БЛА</td>
            <td>
                @{
                    string value;
                    switch (@Model.Type.Name)
                    {
                        case ("BuselM"):
                            value = "Бусел М";
                            break;
                        case ("BuselM50"):
                            value = "Стационарный";
                            break;
                        case ("Big"):
                            value = "Буревестник";
                            break;
                        case ("BakEM"):
                            value = "БЛА на базе дирижабля";
                            break;

                        default:
                            value = "Не установлено";
                            break;
                    }
                  @value
                }
            </td>

        </tr>

        <tr>
            <th scope="row">2</th>
            <td>Дальность применения</td>
            <td> До @Html.DisplayFor(x => x.FlightRadius) км</td>
        </tr>
        <tr>
            <th scope="row">3</th>
            <td>Продолжительность полета</td>
            <td>До @Html.DisplayFor(x => x.Endurance.Hours) ч. @Html.DisplayFor(x => x.Endurance.Minutes) мин. </td>
        </tr>

        <tr>
            <th scope="row">4</th>
            <td>Минимальная скорость</td>
            <td>@Html.DisplayFor(x => x.MinSpeed) м/c </td>

        </tr>

        <tr>
            <th scope="row">5</th>
            <td>Максимальная скорость</td>
            <td>@Html.DisplayFor(x => x.MaxSpeed) м/c</td>
        </tr>

        <tr>
            <th scope="row">6</th>
            <td>Посадка</td>
            <td>
                @{

                    switch (@Model.LandingProcedure)
                    {
                        case ("Approach"):
                            value = "Посадка на полосу";
                            break;
                        case ("Parachute"):
                            value = "Посадка с использованием парашюта";
                            break;


                        default:
                            value = "Не установлено";
                            break;
                    }
                   @value
                }
            </td>
        </tr>
        <tr>
            <th scope="row">7</th>
            <td>Взлет</td>
            <td>
                @{

                    switch (@Model.TakeoffProcedure)
                    {
                        case ("OnHand"):
                            value = "Взлет \"С руки";
                            break;
                        case ("Catapult"):
                            value = "Взлет с использованием катапульты";
                            break;
                        case ("Approach"):
                            value = "Взлет с использованием полосы";
                            break;

                        default:
                            value = "Не установлено";
                            break;
                    }
                    @value
                }
            </td>
        </tr>
        <tr>
            <th scope="row">8</th>
            <td>Взлетная масса</td>
            <td>@Html.DisplayFor(x => x.TakeoffWeight) кг</td>
        </tr>

        <tr>
            <th scope="row">9</th>
            <td>Длина планера</td>
            <td>@Html.DisplayFor(x => x.Length) мм</td>
        </tr>

        <tr>
            <th scope="row">10</th>
            <td>Размах крыльев</td>
            <td>@Html.DisplayFor(x => x.Wingspan) мм</td>
        </tr>
        <tr>
            <th scope="row">11</th>
            <td>Тип силовой установки</td>
            <td>
               
                    @{

                        switch (@Model.PowerUnit)
                        {
                            case ("EE"):
                                value = "Двигатель внутреннего сгорания";
                                break;
                            case ("electro"):
                                value = "Электродвигатель";
                                break;

                            default:
                                value = "Не установлено";
                                break;


                        }
                        @value
                    }
            </td>
        </tr>



        <tr>
            <th scope="row">12</th>
            <td>Поддерживаемые типы целевых нагрузок</td>
            <td>
                <ul>
                    @foreach (var item in @Model.Payloads)
                    {

                        switch (item.Name)
                        {
                            case ("TV"):
                                value = "ТВ - камера";
                                break;
                            case ("IR"):
                                value = "ИК - камера";
                                break;
                            case ("Frontal"):
                                value = "Фронтальная камера";
                                break;
                            case ("Photo"):
                                value = "Фото - камера";
                                break;
                            default:
                                value = "Не установлено";
                                break;


                        }
                        <li>   <a href="@Url.Action(item.Name, "payloads")"><h5><span class="label label-primary">@value</span></h5></a></li>
                    }

                </ul>
            </td>
        </tr>
        <tr>
            <th scope="row">13</th>
            <td>Возможные реализации наземного пункта управления</td>
            <td>
                <ul>
                    @foreach (var item in @Model.GcuTypes)
                    {

                        switch (item.Type)
                        {
                            case ("Portable"):
                                value = "Переносной";
                                break;
                            case ("Stationary"):
                                value = "Стационарный";
                                break;
                            case ("Mobile"):
                                value = "Мобильный";
                                break;

                            default:
                                value = "Не установлено";
                                break;


                        }
                        <li>   <a href="@Url.Action(item.Type, "gcu")"><h5><span class="label label-primary">@value</span></h5></a></li>
                    }
                </ul>
            </td>
        </tr>


    </tbody>
</table>